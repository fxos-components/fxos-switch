{
  "name": "gaia-switch",
  "version": "0.2.1",
  "homepage": "https://github.com/gaia-components/gaia-switch",
  "license": "MIT",
  "main": "gaia-switch.js",
  "devDependencies": {
    "babel": "^5.2.12",
    "bower": "^1.4.1",
    "browserify": "^10.1.0",
    "jshint": "^2.7.0",
    "karma": "^0.12.31",
    "karma-firefox-launcher": "^0.1.4",
    "karma-mocha": "^0.1.10",
    "karma-sinon-chai": "^0.3.0",
    "mozilla-download": "^1.0.5",
    "test-utils": "git://github.com/gaia-components/test-utils.git#v0.0.2",
    "chai": "3.0.0",
    "marionette-firefox-host": "1.0.3",
    "marionette-helper": "0.3.1",
    "marionette-js-runner": "1.1.2"
  },
  "scripts": {
    "install": "bower install",
    "test-lint": "./node_modules/jshint/bin/jshint gaia-switch.js test/*.js",
    "test-unit": "./node_modules/karma/bin/karma start test/karma.conf.js --single-run",
    "test-integration": "./node_modules/.bin/marionette-mocha --host marionette-firefox-host --runtime $FIREFOX_NIGHTLY_BIN --timeout 6000s test/test-integration.js",
    "test-unit-dev": "./node_modules/karma/bin/karma start test/karma.conf.js",
    "bundle": "mkdir -p dist && browserify gaia-switch.js --outfile ./dist/gaia-switch.js --standalone GaiaSwitch",
    "es5": "mkdir -p dist && babel ./dist/gaia-switch.js --out-file ./dist/gaia-switch-es5.js",
    "build": "npm run bundle && npm run es5"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/gaia-components/gaia-switch.git"
  },
  "bugs": {
    "url": "https://github.com/gaia-components/gaia-switch/issues"
  },
  "browser": {
    "gaia-component": "./bower_components/gaia-component/gaia-component.js",
    "drag": "./bower_components/drag/drag.js"
  }
}
